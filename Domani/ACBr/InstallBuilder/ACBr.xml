<project>
    <shortName>ACBr</shortName>
    <fullName>ACBr</fullName>
    <version>0.8b</version>
    <installerFilename>${product_shortname}-${product_version}-${platform_name}-installer.${platform_exec_suffix}</installerFilename>
    <readmeFile>../LEIA-ME.TXT</readmeFile>
    <licenseFile>../licenca.txt</licenseFile>
    <wrapLicenseFileText>1</wrapLicenseFileText>
    <leftImage>barralateral.png</leftImage>
    <logoImage></logoImage>
    <defaultLanguage>pt_BR</defaultLanguage>
    <allowLanguageSelection>0</allowLanguageSelection>
    <allowedLanguages></allowedLanguages>
    <cdromDirectory>${product_shortname}-${product_version}-cdrom</cdromDirectory>
    <defaultUnixDirectoryPermissions>755</defaultUnixDirectoryPermissions>
    <defaultUnixFilePermissions>644</defaultUnixFilePermissions>
    <height>350</height>
    <outputDirectory>${installbuilder_install_root}/output</outputDirectory>
    <projectSchemaVersion>1.2</projectSchemaVersion>
    <requireInstallationByRootUser>0</requireInstallationByRootUser>
    <saveRelativePaths>1</saveRelativePaths>
    <slideShowTiming>5</slideShowTiming>
    <startMenuGroupName>${product_fullname}</startMenuGroupName>
    <style>standard</style>
    <uninstallerDirectory>${installdir}</uninstallerDirectory>
    <validatorProgram></validatorProgram>
    <width>500</width>
    <componentList>
        <component>
            <name>ACBr</name>
            <description>ACBr ${product_version} (Delphi / Kylix / FPC)</description>
            <selected>1</selected>
            <desktopShortcutList/>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../ACBr-change-log.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../LEIA-ME.TXT</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>../source</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>../release.ini</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../copyright.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../licenca.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../LICENSE.TXT</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../want.xml</origin>
                        </distributionFile>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/uninstall</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <windowsExec>${installdir}/uninstaller.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Manuais Diversos</description>
                    <destination>${installdir}/manuais</destination>
                    <name>man</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../tools/Bematech/Bematech</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../tools/Daruma</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../tools/Mecaf</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../tools/Schalter</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../tools/Sweda</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../tools/Yanco</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Documentação do ACBr</description>
                    <destination>${installdir}/doc</destination>
                    <name>doc</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../tools/Validador/VERIFICAÇÃO DOS DÍGITOS DE TODAS AS INSCRIÇÕES ESTADUAIS.doc</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>../doc/help</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>../doc/Automação Comercial.sxi</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../doc/ApresentaçãoACBr_OpenOffice.ppt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../doc/ApresentacaoACBr_OpenOffice.sxi</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../doc/ApresentacaoACBr.ppt</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Ferramentas</description>
                    <destination>${installdir}/tools</destination>
                    <name>tools</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../tools/dof2want.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../tools/want.exe</origin>
                        </distributionFile>
                    </distributionFileList>
                    <actionList>
                        <runProgram>
                                <program>${installdir}/tools/want.exe</program>
                                <programArguments>-buildfile "${installdir}/want.xml"</programArguments>
                        </runProgram>
                    </actionList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <windowsExec>${installdir}/uninstall.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <customLanguageFileList/>
    <fileList/>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <title></title>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}-${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <leftImage></leftImage>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList/>
    <preBuildActionList/>
    <preInstallationActionList/>
    <slideShowImageList/>
</project>

